<p id="notice"><%= notice %></p>
<main role="main">
  <section class="text-center">
    <div class="container">
      <h1 class="jumbotron-heading">商品一覧</h1>
    </div>
  </section>
<!--
<%= link_to '商品を追加する', new_product_path, class: 'btn btn-secondary' %>
 -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  商品を追加する
</button>

<!-- モーダルの設定 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">商品を登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form2', product: @product %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row" id="products-zone">
        <% @products.each do |product| %>
          <div class="col-md-4" id="product-<%= product.id %>">
            <div class="card mb-4 shadow-sm">
              <a href="/products/<%= product.id %>"><img src=/<%= product.image %> class="img-thumbnail"></a>
              <div class="card-body">
                <p class="card-text"><%= product.name %></p>
                <p class="card-text"><%= product.price %>円</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "詳細", product, class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to "編集", edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to "削除", product_path(product), method: :delete, class: 'btn btn-sm btn-outline-secondary', remote: true %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div><!-- /.album  -->
</main>

