<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :商品名 %>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :価格 %>
    <%= form.number_field :price, id: :product_price %>
  </div>

  <div class="field">
    <%= form.label :在庫数 %>
    <%= form.number_field :stock, id: :product_stock %>
  </div>

  <div class="field">
    <%= form.label :商品説明 %>
    <%= form.text_area :note, id: :product_note %>
  </div>

  <div class="field">
    <%= form.label :商品画像 %>
    <%= form.file_field :imageobject, id: :product_image %>
  </div>

  <div class="actions">
    <%= form.submit '商品を登録' %>
  </div>
<% end %>
